<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/x_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X:"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/x_value_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.0"
        android:inputType="text"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/y_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y:"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/y_value_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.0"
        android:inputType="text"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/z_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z:"
        android:textSize="18sp"
        android:layout_marginRight="5dp" />

    <EditText
        android:id="@+id/z_value_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0.0"
        android:inputType="text"
        android:layout_marginRight="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/direction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction:"
        android:textSize="18sp"
        android:layout_marginRight="15dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directions_spinner"
        android:spinnerMode="dropdown"/>
    </LinearLayout>

</LinearLayout>